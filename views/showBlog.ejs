        <% include partials/header-specific %>

		<div id="wrapper" class="img">

		  <img id="main-blog-img" class="img-responsive" src="<%= blog.image %>">

		  <div id="overlay">

		    <a  class="logo" href="/">Anime Square</a>

		    <p id="present">PRESENTS</p>

		    <!-- <a id="category" href="/blog">BLOG</a> -->
		    
		  <!-- <div class="container"> -->
		    <h1 id="main-blog-title" class="container"><%= blog.title %></h1>
		    <!-- <p id="summary"><em><%= blog.summary %></em></p> -->

		    
		  <!-- </div> -->
		         
		  </div>   
		 
	    </div>

		<div class="col-md-3 col-md-offset-1">

	      <div id="container">

            <div class="social-share">  
              <a id="fb-share" href="http://www.facebook.com/share.php?u=[URL]&title=[TITLE]"><i class="fa fa-facebook"></i>SHARE</a>
              <a id="twitter-share" href="http://twitter.com/intent/tweet?status=<%=fullUrl %>"><i class="fa fa-twitter" aria-hidden="true"></i>TWEET</a>
              <a id="pin-share" href="http://pinterest.com/pin/create/bookmarklet/?media=[MEDIA]&url=[URL]&is_video=false&description=[TITLE]"><i class="fa fa-pinterest" aria-hidden="true"></i>PIN</a>
            </div>  

			<div id="main-blog-content">
			<span class="blog-author"><em>By <a class="author" href="/author/<%= latest.author %>"><%= blog.author %></a> | <%= blog.date %></em></span><br><br> 
			<%- blog.body %></div>

			<% if( currentUser && ( currentUser.username == "eknoor" || currentUser.username == blog.author) ) { %>

			<a class="ui secondary basic button" href="/blog/<%= blog._id %>/<%= blog.title %>/edit">Edit</a>

			<form action="/blog/<%= blog._id %>/<%= blog.title %>?_method=DELETE" method="POST">
				<button class="ui secondary basic button">Delete</button>

			</form>
        
			<% } %>

		  </div>

		  <div id="container-more">

		    <h2 id="more"><em>MORE FROM ANIME SQUARE</em></h2>

		    <% more.forEach(function(latest,index) { %>

		    <div class="col-md-4 col-sm-6 more-section" >
		  		    
			     <div class="thumbnail">
			      <div class="img">
			        <a href="#" class="sub-category">TV</a>
			    	<a href="/<%= latest.postType %>/<%= latest.referenceId %>/<%= latest.title %>"><img src="<%= latest.image %>"></a>
			    	<!-- <a href="/<%= latest.postType %>/<%= latest.referenceId %>"><h3><%= latest.title %></h3></a> -->
			      </div>	
			    </div>

			    <div class="caption">
			    	<a href="/<%= latest.postType %>/<%= latest.referenceId %>/<%= latest.title %>"><h3><%= latest.title %></h3></a>
			    </div>

			    <span><em>By <a class="author" href="/author/<%= latest.author %>"><%= latest.author %></a> on <%= latest.date %></em></span><br><br>

		    </div> 

	    <% }) %>

	    </div>

	    </div>

		<div class="col-md-3 col-md-offset-5">

		 	<div class="related-posts">
			 	<h2 class="trending">TRENDING</h2>
				<% latest.forEach(function(latest,index) { %>

				<div class="individual-related">
				    <div class="thumbnail-related">
				      <div class="img">
				    	<a href="/<%= latest.postType %>/<%= latest.referenceId %>/<%= latest.title %>"><img class="img-responsive" src="<%= latest.image %>"></a>
				    	<a href="/<%= latest.postType %>/<%= latest.referenceId %>/<%= latest.title %>"><h3><%= latest.title %></h3></a>
				      </div>
				    </div>

				    <div class="caption-related">
				    	<!-- <a href="/<%= latest.postType %>/<%= latest.referenceId %>"><h3><%= latest.title %></h3></a> -->
				    </div>
				</div>
			    
				<% }) %>
			</div>

		</div>

<% include partials/footer %>