<form class="ui form" action="/blog/<%= blog._id %>/<%= blog.titleURL %>?_method=PUT" method="POST">

  <div class="field">
    <label>Title</label>
    <input type="text" name="blog[title]" value="<%= blog.title %>">
    <!-- <textarea type="text" name="blog[title]"><%= blog.body %></textarea> -->
  </div>

  <div class="field">
    <label>Image</label>
    <input type="text" name="blog[image]" value="<%= blog.image %>">
  </div>

  <div class="field">
    <label>Text</label>
      <textarea id="MyID" type="text" name="blog[body]"><%= blog.body %></textarea>
  </div>

  <div class="field">
    <label>Date</label>
    <input type="text" name="blog[date]" value="<%= blog.date %>">
  </div>

  <div class="field">
    <label>Summary</label>
    <input type="text" name="blog[summary]" value="<%= blog.summary %>">
  </div>

  <div class="field">
    <label>Author</label>
    <input type="text" name="blog[author]" value="<%= blog.author %>">
  </div>

  <div class="field">
    <label>Title URL</label>
    <input type="text" name="blog[titleURL]" value="<%= blog.titleURL %>">
  </div>

  <button class="ui secondary basic button">Submit</button>
</form>

