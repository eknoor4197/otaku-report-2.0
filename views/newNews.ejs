<% include ./partials/header %>

<div class="jumbotron">
  <h1>New News</h1>
</div>

<form class="ui form" action="/news" method="POST">
  <div class="field">
    <label>Title</label>
    <input type="text" name="news[title]" placeholder="title">
  </div>

  <div class="field">
  	<label>Date</label>
    <input type="text" name="news[date]" placeholder="date">
  </div>

  <div class="field">
    <label>Image</label>
    <input id="image" type="text" name="news[image]" placeholder="image">
  </div>
  
  <div class="field">
    <label>Text</label>
    <textarea id="MyID" type="text" name="news[body]"></textarea> 
  </div>

  <div class="field">
    <label>Summary</label>
    <input type="text" name="news[summary]" placeholder="summary">
  </div>

  <div class="field">
    <label>Author</label>
    <input type="text" name="news[author]" placeholder="author">
  </div>

  <div class="field">
    <label>Featured</label>
    <input type="text" name="news[featured]" placeholder="yes or no">
  </div>
  
  <button id="submit" class="ui secondary basic button">Submit</button>
</form>


<% include ./partials/footer %>